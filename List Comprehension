##create a list of squares of the numbers from l
l = [1, 2, 3, 4, 5]

l2 = [item ** 2 for item in l]
l2

##create a list of lists, each of which contains the square and cube of each number from l
[[item ** 2, item ** 3] for item in l]

##create a list of the names from l in lower case
names = ["Alice", "Bob", "Tom"]

[name.lower() for name in names]

##create a list of tuples, each of which contains each name from l and the length of the name
[(name, len(name)) for name in names]
